<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
	<Runtime>
	</Runtime>
	<Extension path="/MonoDevelop/Ide/Pads">
		<Pad id="Continuous.Client.XamarinStudio.Pads.MainPad" 
			defaultLayout="*" 
			defaultPlacement="Bottom" 
			_label="Continuous Coding" 
			icon="md-cs-project" 
			class="Continuous.Client.XamarinStudio.MainPad" />
	</Extension>
	<Extension path="/MonoDevelop/Ide/Commands">
	    <Command
	    	id="Continuous.Client.XamarinStudio.Commands.VisualizeClass"
            _label="Visualize Class"
            shortcut="Ctrl|Shift|C"
            macShortcut="Ctrl|Shift|C"
            defaultHandler="Continuous.Client.XamarinStudio.VisualizeClassHandler" />
	    <Command
	    	id="Continuous.Client.XamarinStudio.Commands.StopVisualizingClass"
            _label="Stop Visualizing Class"
            shortcut="Alt|Ctrl|Shift|C"
            macShortcut="Alt|Ctrl|Shift|C"
            defaultHandler="Continuous.Client.XamarinStudio.StopVisualizingClassHandler" />
	</Extension>
	<Extension path="/MonoDevelop/Ide/MainMenu/Tools">
	    <CommandItem id="Continuous.Client.XamarinStudio.Commands.VisualizeClass" />
	</Extension>
	<Extension path="/MonoDevelop/Ide/MainMenu/Tools">
	    <CommandItem id="Continuous.Client.XamarinStudio.Commands.StopVisualizingClass" />
	</Extension>
</ExtensionModel>
